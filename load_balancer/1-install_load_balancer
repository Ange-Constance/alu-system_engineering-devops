#!/usr/bin/env bash

# bash script that installs HAProxy & makes configurations to meet the following requirements:

apt-get -y install software-properties-common
add-apt-repository ppa:vbernat/haproxy-1.8
apt-get update
apt-get -y install haproxy
echo "ENABLED=1" >> /etc/default/haproxy
printf %s "listen 5432-web
    bind *:80
    mode http
    balance roundrobin
    server 5432-web-01 54.145.20.12:80 check
    server 5432-web-02 18.205.245.49:80 check
haproxy/haproxy.cfg
=======
# Create a script to install and configure HAProxy on lb-01 server
# Configure HAProxy to send traffic to web-01 and web-02 servers
# Distribute requests using a roundrobin algorithm
# Make sure that HAProxy can be managed via an init script
# Install and configure HAproxy on my lb-01 server.
sudo apt-get -y update
apt-get -y install haproxy

# edit config file
server_config=\
"
frontend oreste-frontend
        bind *:80
        mode http
        default_backend oreste-backend
backend oreste-backend
        balance roundrobin
        server 6238-web-01 54.196.216.8:80 check
        server 6238-web-02 98.80.15.59:80 check
"
echo "$server_config" | sudo tee -a /etc/haproxy/haproxy.cfg

# enable haproxy to be started by init script

echo "ENABLED=1" | sudo tee -a /etc/default/haproxy

